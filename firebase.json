{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix functions install",
      "npm --prefix functions run build"
    ],
    "runtime": "nodejs18"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
